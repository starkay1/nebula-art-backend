{
  "name": "nebula-art-backend",
  "version": "1.0.0",
  "description": "Backend service for Nebula Art platform",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "start:prod": "node dist/server.js",
    "start:main": "node dist/main.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:main": "ts-node-dev --respawn --transpile-only src/main.ts",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate",
    "migration:run": "typeorm-ts-node-commonjs migration:run",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert"
  },
  "dependencies": {
    "express": "^4.18.2",
    "typeorm": "^0.3.17",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "sharp": "^0.32.6",
    "multer": "^1.4.5-lts.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.8.7",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcrypt": "^5.0.2",
    "@types/multer": "^1.4.11",
    "@types/cors": "^2.8.17",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0"
  },
  "keywords": [
    "art",
    "social",
    "platform",
    "express",
    "typescript",
    "postgresql"
  ],
  "author": "Nebula Art Team",
  "license": "MIT"
}
